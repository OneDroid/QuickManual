{
    "manifest_version": 3,
    "name": "QuickManual",
    "version": "1.0",
    "description": "Quickly add manual time entries on Monitask by clicking inactive time blocks. Developed by Tawheed Monowar.",
    "icons": {
        "48": "icons/icon-48.svg",
        "96": "icons/icon-96.svg"
    },
    "permissions": [
        "activeTab",
        "storage",
        "contextMenus"
    ],
    "host_permissions": [
        "https://app.monitask.com/*",
        "https://www.monitask.com/*",
        "https://monitask.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://app.monitask.com/*",
                "https://www.monitask.com/*",
                "https://monitask.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "QuickManual",
        "default_icon": {
            "48": "icons/icon-48.svg"
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "quickmanual@monitask.addon",
            "strict_min_version": "109.0"
        }
    }
}